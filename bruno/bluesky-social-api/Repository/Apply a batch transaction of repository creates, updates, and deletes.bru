meta {
  name: Apply a batch transaction of repository creates, updates, and deletes.
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/xrpc/com.atproto.repo.applyWrites
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "repo": "",
    "validate": false,
    "writes": [],
    "swapCommit": ""
  }
}

example {
  name: Successful response for repoApplyWrites (Example request for repoApplyWrites)
  
