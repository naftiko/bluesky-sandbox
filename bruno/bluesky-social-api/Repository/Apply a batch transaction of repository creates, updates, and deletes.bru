    url: {{baseUrl}}/xrpc/com.atproto.repo.applyWrites
    method: POST
    mode: json
    body:json: {
      {
        "repo": "user.bsky.social",
        "writes": [
          {
            "collection": "app.bsky.feed.post",
            "value": {},
            "rkey": "example-rkey"
          }
        ],
        "validate": true,
        "swapCommit": "bafyreiabc123example"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
